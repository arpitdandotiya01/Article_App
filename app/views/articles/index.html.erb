<h1>Articles Listing Page</h1>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |article| %>
        <tr>
            <td><%= article.title %></td>
            <td><%= article.desc %></td>
            <td><%= link_to 'Show', article_path(article) %> |
                <%= link_to 'Edit', edit_article_path(article) %> |
                <%= link_to  'Delete', article_path(article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        </tr>
        <% end %>
    </tbody>
</table>

<%= link_to 'Create New Article', new_article_path(@article) %>